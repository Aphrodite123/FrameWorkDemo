<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="custom_base_app_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="divide_line_short">
        <item name="android:background">@color/color_cacbcc</item>
        <item name="android:layout_width">@dimen/ipen_short_line_bottom_width</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="select_item_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/options_item_height</item>
        <item name="android:paddingLeft">@dimen/options_item_left_margin</item>
        <item name="android:paddingRight">@dimen/options_item_right_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/common_click_bg</item>
    </style>

    <style name="divide_line">
        <item name="android:background">@color/color_cacbcc</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="divide_line_my_fragment">
        <item name="android:background">@color/color_d9d9d9</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

</resources>
