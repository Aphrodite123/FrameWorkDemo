<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footer_loading_more_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/footer_proressbar_iv"
        android:layout_width="@dimen/dip30"
        android:layout_height="@dimen/dip30"
        android:src="@drawable/loading_animation" />

    <TextView
        android:id="@+id/footer_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip10"
        android:gravity="center"
        android:lines="1"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="@color/color_80000000"
        android:textSize="@dimen/font11" />

</LinearLayout>