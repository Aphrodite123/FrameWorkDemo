<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_title_height">

    <ImageView
        android:id="@+id/iv_left_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/dip10"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:onClick="clickBack"
        android:padding="@dimen/dip10"
        android:scaleType="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/dip12"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:onClick="clickLeftText"
        android:paddingBottom="@dimen/dip7"
        android:paddingLeft="@dimen/dip10"
        android:paddingRight="@dimen/dip10"
        android:paddingTop="@dimen/dip7"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font12"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/close_page_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/dip10"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:onClick="closePageEvent"
        android:padding="@dimen/dip10"
        android:scaleType="center"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/center_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_center_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:lines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="150dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:lines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="150dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font10"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/dip10"
        android:layout_marginRight="@dimen/dip10"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="clickRightBtn"
        android:padding="@dimen/dip10"
        android:scaleType="center"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/right_second_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="onRightSecond"
        android:padding="@dimen/dip10"
        android:scaleType="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginLeft="@dimen/dip12"
        android:layout_marginRight="@dimen/dip10"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="@dimen/dip5"
        android:gravity="center_vertical"
        android:onClick="clickRightText"
        android:paddingBottom="@dimen/dip7"
        android:paddingLeft="@dimen/dip10"
        android:paddingRight="@dimen/dip10"
        android:paddingTop="@dimen/dip7"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font12"
        android:visibility="gone" />
</android.support.v7.widget.Toolbar>